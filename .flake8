[flake8]
max-line-length=110
max-arguments = 6

ignore =
        # line break before binary operator
        W503,
        # Forbid f strings
        WPS305,
        # Wrong multiline string use violation
        WPS306,

per-file-ignores =
        test_*.py: D100, D101, D102, D103, S101, DAR101, WPS214, WPS217, WPS432,  WPS437

exclude =
    .git,
    __pycache__,
    .devcontainer,
